<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hubSetupStep3"
            type="com.example.airqualityindex.features.device.setup.controller.HubSetupStep3" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.device.setup.controller.HubSetupStep3">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/img_hub_connect_success"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="108:88"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.254"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/text_hub_connect_success"
            android:textColor="@color/night_rider"
            android:textStyle="normal"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="166:28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:layout_constraintWidth_percent="0.4" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_hub_setup"
            android:onClick="@{view->hubSetupStep3.onClickListener(view)}"
            android:shadowColor="@color/black_trans_80"
            android:shadowDy="1"
            android:shadowRadius="0"
            android:text="@string/next_step"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="173:45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.817"
            app:layout_constraintWidth_percent="0.480" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>