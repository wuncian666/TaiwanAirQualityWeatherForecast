<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/ThemeOverlay.AirQualityIndex.FullscreenContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bilious_green"
        tools:context=".workers.SplashScreenActivity">

        <ImageView
            android:id="@+id/img_cloud"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/aqi_normal"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="140.5:93.4" />

        <ImageView
            android:id="@+id/img_hi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/img_cloud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="115.4:66.8"
            android:background="@drawable/img_hi"
            app:layout_constraintWidth_percent="0.268" />

        <ImageView
            android:id="@+id/img_have_a_good_day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.88"
            app:layout_constraintDimensionRatio="348:42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_hi"
            android:layout_marginTop="48dp"
            android:background="@drawable/img_have_a_good_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>